<h1 >Please, log in to your your account</h1>

</br>

<%= form_tag sessions_path(action: "create") do %>

    <%= label_tag "email:" %> </br>
    <%= text_field_tag "email", @email %>
    <br /> <br />

    <%= label_tag "password:" %> </br>
    <%= text_area_tag "password", @password %>
    <br /> <br />

    <%= submit_tag "Log in" %>
      
<% end %>